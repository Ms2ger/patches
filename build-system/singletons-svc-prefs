 function readFile(file, callback) {
   NetUtil.asyncFetch(file, function (inputStream, statusCode, request) {
     let data = NetUtil.readInputStreamToString(inputStream,
                                                inputStream.available());
     callback(statusCode, data);
   });
 }
 
